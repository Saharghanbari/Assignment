num1 = float(input("عدد اول را وارد کنید: "))
num2 = float(input("عدد دوم را وارد کنید: "))
sum_result = num1 + num2
difference = num1 - num2
product = num1 * num2
if num2 != 0:
    division = num1 / num2
else:
    division = "تقسیم بر صفر نامعقول است"
print("\nنتایج محاسبات:")
print("مجموع:", sum_result)
print("تفاضل:", difference)
print("ضرب:", product)
print("تقسیم:", division)
